{
  "name": "site",
  "version": "0.0.1",
  "description": "eleventy static site boilerplate",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Hello World\"",
    "start": "npm-run-all --parallel watch:*",
    "watch:postcss": "postcss ./styles/index.css -o ./_site/index.css --watch --verbose",
    "watch:scripts": "esbuild ./scripts/index.js --bundle --watch --outfile=./_site/index.js",
    "watch:11ty": "eleventy --serve --watch",
    "build": "npm-run-all --parallel build:*",
    "build:postcss": "postcss ./styles/index.css -o ./_site/index.css",
    "build:scripts": "esbuild ./scripts/index.js --bundle --minify --outfile=./_site/index.js",
    "build:11ty": "eleventy"
  },
  "keywords": [
    "eleventy",
    "boilerplate"
  ],
  "author": "byodian",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.7",
    "esbuild": "^0.14.42",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "tailwindcss": "^3.0.24"
  }
}
